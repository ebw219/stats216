<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:id="@+id/titleNew"
        android:layout_width="286dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/likeButton"
        android:layout_alignLeft="@+id/listItemText"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/listItemText"
        android:layout_toLeftOf="@+id/likeButton"
        android:layout_toStartOf="@+id/likeButton"
        android:layout_marginTop="5dp"
        android:hint="Title"
        android:text=""
        android:textAppearance="@style/TextAppearance.Design.Tab"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:text="Title" />

    <TextView
        android:id="@+id/listItemText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/dislikeButton"
        android:layout_alignLeft="@+id/space2"
        android:layout_alignStart="@+id/space2"
        android:layout_below="@+id/titleNew"
        android:layout_toLeftOf="@+id/likeButton"
        android:layout_weight="0.07"
        android:hint="Message"
        android:text=""
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textSize="23sp"
        tools:text="Message" />

    <ToggleButton
        android:id="@+id/likeButton"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="ToggleButton"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textOff="Like"
        android:textOn="Liked"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/dislikeButton"
        android:layout_alignStart="@+id/dislikeButton" />

    <ToggleButton
        android:id="@+id/dislikeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ToggleButton"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textOff="Dislike"
        android:textOn="Disliked"
        android:layout_below="@+id/space2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/listItemVotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Votes"
        android:layout_below="@+id/likeButton"
        android:layout_toRightOf="@+id/titleNew"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/bEdit"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="55dp"
        android:layout_height="35dp"
        android:elevation="0dp"
        android:text="Edit"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:layout_below="@+id/listItemText"
        android:layout_toRightOf="@+id/listItemText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/listItemVotes"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:textAlignment="center"
        android:id="@+id/space2" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@android:color/background_dark"
        android:id="@+id/view" />

    <Button
        android:id="@+id/bDelete"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="65dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/listItemText"
        android:text="Delete"
        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

</RelativeLayout>